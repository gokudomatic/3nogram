script/source = "tool
extends HBoxContainer

signal selected(source)
signal deleted(source)

var value

export(String) var text setget set_text
export(bool) onready var allow_delete setget set_allow_delete

func _ready():
	pass

func set_text(value):
	if has_node(\"select_btn\"):
		text=value
		$select_btn.text=value

func set_allow_delete(value):
	if has_node(\"delete_btn\"):
		allow_delete=value
		if value:
			$empty.show()
			$delete_btn.show()
		else:
			$empty.hide()
			$delete_btn.hide()

func _on_select_btn_pressed():
	emit_signal(\"selected\",self)


func _on_delete_btn_pressed():
	emit_signal(\"deleted\",self)
